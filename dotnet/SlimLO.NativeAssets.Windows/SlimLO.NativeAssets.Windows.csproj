<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Packaging-only project: no code, just native assets -->
    <TargetFrameworks>netstandard2.0;net8.0</TargetFrameworks>
    <NoBuild>true</NoBuild>
    <IncludeBuildOutput>false</IncludeBuildOutput>

    <!-- NuGet metadata -->
    <PackageId>SlimLO.NativeAssets.Windows</PackageId>
    <Version>0.1.0</Version>
    <Authors>SlimLO Contributors</Authors>
    <Description>Native Windows runtime for SlimLO PDF converter. Contains the LibreOffice headless engine, SlimLO C API, and worker process for x64 and arm64. Requires Visual C++ Redistributable 2022.</Description>
    <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
    <PackageTags>pdf;conversion;libreoffice;native;windows</PackageTags>
    <RepositoryType>git</RepositoryType>
    <NoWarn>NU5128;NU5100</NoWarn>
  </PropertyGroup>

  <!-- Input directories for native artifacts (override via -p:NativeDir_x64=path/) -->
  <PropertyGroup>
    <NativeDir_x64 Condition="'$(NativeDir_x64)' == ''">../../output-win-x64/</NativeDir_x64>
    <NativeDir_arm64 Condition="'$(NativeDir_arm64)' == ''">../../output-win-arm64/</NativeDir_arm64>
  </PropertyGroup>

  <!-- win-x64 runtime assets -->
  <ItemGroup Condition="Exists('$(NativeDir_x64)')">
    <Content Include="$(NativeDir_x64)program/**" PackagePath="slimlo/win-x64/program/" />
    <Content Include="$(NativeDir_x64)share/**" PackagePath="slimlo/win-x64/share/" />
    <Content Include="$(NativeDir_x64)presets/**" PackagePath="slimlo/win-x64/presets/" />
  </ItemGroup>

  <!-- win-arm64 runtime assets -->
  <ItemGroup Condition="Exists('$(NativeDir_arm64)')">
    <Content Include="$(NativeDir_arm64)program/**" PackagePath="slimlo/win-arm64/program/" />
    <Content Include="$(NativeDir_arm64)share/**" PackagePath="slimlo/win-arm64/share/" />
    <Content Include="$(NativeDir_arm64)presets/**" PackagePath="slimlo/win-arm64/presets/" />
  </ItemGroup>

  <!-- Ship MSBuild .targets so consumers get native files copied to output -->
  <ItemGroup>
    <None Include="build/SlimLO.NativeAssets.Windows.targets" Pack="true" PackagePath="build/" />
    <None Include="buildTransitive/SlimLO.NativeAssets.Windows.targets" Pack="true" PackagePath="buildTransitive/" />
  </ItemGroup>

</Project>
